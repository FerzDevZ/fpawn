#!/bin/bash

# fpawn Ultra - The Ultimate Pawn CLI for Linux
# Created for: FerzDevZ
# Version: 8.0 (Workspace Edition)
# Engines: qawno (open.mp) & pawno (Legacy SAMP)

# --- DIRECTORIES ---
BASE_DIR="$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")"
QAWNO_DIR="$BASE_DIR/qawno"
PAWNO_DIR="$BASE_DIR/pawno"
GLOBAL_INC="$BASE_DIR/bin/includes"

# Colors
GREEN='\033[0;32m'
BLUE='\033[0;34m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
MAGENTA='\033[0;35m'
BOLD='\033[1m'
NC='\033[0m'

# --- POWER FUNCTIONS ---

function show_help() {
    echo -e "${BLUE}${BOLD}fpawn Workspace${NC} - v8.0"
    echo -e "Ultimate Suite by ${CYAN}${BOLD}FerzDevZ${NC}"
    echo -e ""
    echo -e "Usage: ${YELLOW}fpawn${NC} <file.pwn> [options]"
    echo ""
    echo -e "${BOLD}Workspace Detection:${NC}"
    echo -e "  - ${GREEN}Legacy Profile${NC}: Auto-detects server.cfg or pawno/ folder"
    echo -e "  - ${GREEN}OMP Profile${NC}: Auto-detects pawn.json or dependencies/ folder"
    echo ""
    echo -e "${BOLD}Init Commands:${NC}"
    echo -e "  --init legacy   Setup classic SA-MP structure"
    echo -e "  --init omp      Setup modern open.mp structure"
    echo ""
    echo -e "${BOLD}Autopilot:${NC}"
    echo -e "  - Self-Healing enabled: missing includes are auto-downloaded from GitHub"
    echo ""
}

function project_init() {
    local TYPE=$1
    echo -e "${BLUE}[fpawn]${NC} Initializing ${CYAN}${TYPE}${NC} project structure..."
    
    if [ "$TYPE" = "omp" ]; then
        mkdir -p src include dependencies scriptfiles/logs
        echo -e "{\n  \"dependencies\": {},\n  \"compiler\": {\n    \"version\": \"3.10.11\"\n  }\n}" > pawn.json
        [ ! -f "src/main.pwn" ] && echo -e "#include <open.mp>\n\nmain() {\n    print(\"Hello FerzDevZ open.mp!\");\n}" > src/main.pwn
    else
        mkdir -p gamemodes filterscripts pawno/include scriptfiles/logs
        echo -e "echo Running Legacy SAMP Server...\nannounce 1\nquery 1" > server.cfg
        [ ! -f "gamemodes/main.pwn" ] && echo -e "#include <a_samp>\n\nmain() {\n    print(\"Hello FerzDevZ Legacy!\");\n}" > gamemodes/main.pwn
    fi
    
    echo -e "${GREEN}[Success]${NC} ${TYPE^} structure ready for FerzDevZ."
}

function smart_finder() {
    local INC_NAME=$1
    echo -e "${BLUE}[Autopilot]${NC} Searching GitHub for ${CYAN}$INC_NAME${NC}..."
    local SEARCH_URL="https://api.github.com/search/code?q=filename:$INC_NAME+extension:inc"
    local RESPONSE=$(curl -s "$SEARCH_URL")
    local DOWNLOAD_URL=$(echo "$RESPONSE" | jq -r '.items[0].html_url' | sed 's/github.com/raw.githubusercontent.com/' | sed 's/\/blob\//\//')
    
    if [ "$DOWNLOAD_URL" != "null" ] && [ -n "$DOWNLOAD_URL" ]; then
        echo -e "${GREEN}[Found]${NC} Download: ${DOWNLOAD_URL}"
        local TARGET_DIR="include"
        [ -d "pawno/include" ] && TARGET_DIR="pawno/include"
        mkdir -p "$TARGET_DIR"
        curl -L -s -o "$TARGET_DIR/$INC_NAME" "$DOWNLOAD_URL"
        return 0
    fi
    return 1
}

function color_filter() {
    sed -u \
    -e "s/error \([0-9]\{3\}\)/\x1b[1;31merror \1\x1b[0m/g" \
    -e "s/warning \([0-9]\{3\}\)/\x1b[1;33mwarning \1\x1b[0m/g" \
    -e "s/(\([0-9]\{1,\}\))/\x1b[1;36m(\1)\x1b[0m/g"
}

# --- CORE ENGINE ---

RETRY_LIMIT=5
RETRY_COUNT=0

function execute_compiler() {
    local ENGINE=$1
    local PROFILE=$2
    local TARGET=$3
    shift 3
    local ARGS=("$@")
    
    local OUT_FILE="/tmp/fpawn_out.log"
    local STATUS=0

    # Dynamic Include Prioritization
    local INCLUDE_FLAGS=()
    if [ "$PROFILE" = "omp" ]; then
        [ -d "include" ] && INCLUDE_FLAGS+=("-iinclude")
        [ -d "dependencies" ] && INCLUDE_FLAGS+=("-idependencies")
    else
        [ -d "pawno/include" ] && INCLUDE_FLAGS+=("-ipawno/include")
        [ -d "include" ] && INCLUDE_FLAGS+=("-iinclude")
    fi
    INCLUDE_FLAGS+=("-i$GLOBAL_INC")

    if [ "$ENGINE" = "qawno" ]; then
        chmod +x "$QAWNO_DIR/pawncc"
        export LD_LIBRARY_PATH="$QAWNO_DIR:$LD_LIBRARY_PATH"
        "$QAWNO_DIR/pawncc" "${ARGS[@]}" "${INCLUDE_FLAGS[@]}" "-i$QAWNO_DIR/include" "-;+" > "$OUT_FILE" 2>&1
        STATUS=$?
    else
        wine "$PAWNO_DIR/pawncc.exe" "${ARGS[@]}" "${INCLUDE_FLAGS[@]}" "-i$PAWNO_DIR/include" > "$OUT_FILE" 2>&1
        STATUS=$?
    fi

    # Self-Healing Check
    if grep -q "fatal error 100: cannot read from file: \"" "$OUT_FILE"; then
        local MISSING=$(grep "fatal error 100: cannot read from file: \"" "$OUT_FILE" | head -n 1 | sed 's/.*: "\(.*\)".*/\1/')
        if [ $RETRY_COUNT -lt $RETRY_LIMIT ]; then
            echo -e "${YELLOW}[Self-Healing]${NC} Fixing missing ${BOLD}$MISSING.inc${NC}..."
            if smart_finder "$MISSING.inc"; then
                ((RETRY_COUNT++))
                execute_compiler "$ENGINE" "$PROFILE" "$TARGET" "${ARGS[@]}"
                return $?
            fi
        fi
    fi

    cat "$OUT_FILE" | color_filter
    return $STATUS
}

# --- MAIN LOGIC ---

if [ $# -eq 0 ]; then
    show_help
    exit 1
fi

ENGINE="auto"
PROFILE="auto"
TARGET_FILE=""
PASSED_ARGS=()
WATCH=false

while [[ $# -gt 0 ]]; do
    case $1 in
        --help) show_help; exit 0 ;;
        --init) 
            PKB=$2; [ -z "$PKB" ] && PKB="legacy"
            project_init "$PKB"; exit 0 ;;
        --update) 
            mkdir -p "$GLOBAL_INC"
            curl -L -s -o "$GLOBAL_INC/a_samp.inc" "https://raw.githubusercontent.com/pawn-lang/samp-stdlib/master/a_samp.inc"
            echo -e "${GREEN}[Update]${NC} Global library updated."; exit 0 ;;
        --plugin)
            # Restore plugin manager from v7 if needed
            shift 2; exit 0 ;;
        --watch) WATCH=true; shift ;;
        --omp) ENGINE="qawno"; PROFILE="omp"; shift ;;
        --legacy) ENGINE="pawno"; PROFILE="legacy"; shift ;;
        --debug) PASSED_ARGS+=("-d3"); shift ;;
        --opt) PASSED_ARGS+=("-O2"); shift ;;
        *.pwn) TARGET_FILE="$1"; PASSED_ARGS+=("$1"); shift ;;
        *) PASSED_ARGS+=("$1"); shift ;;
    esac
done

# --- SMART WORKSPACE SENSING ---
CWD=$(pwd)
if [ "$PROFILE" = "auto" ]; then
    if [ -f "pawn.json" ] || [ -d "dependencies" ]; then
        PROFILE="omp"
        echo -e "${GREEN}[Workspace]${NC} Detected ${BOLD}open.mp${NC} structure."
    elif [ -f "server.cfg" ] || [ -d "pawno/include" ]; then
        PROFILE="legacy"
        echo -e "${YELLOW}[Workspace]${NC} Detected ${BOLD}SA-MP Legacy${NC} structure."
    fi
fi

if [ "$ENGINE" = "auto" ] && [ -f "$TARGET_FILE" ]; then
    if grep -q "#include <open.mp>" "$TARGET_FILE"; then ENGINE="qawno"; PROFILE="omp"
    elif grep -q "#include <a_samp>" "$TARGET_FILE"; then ENGINE="pawno"; [ "$PROFILE" = "auto" ] && PROFILE="legacy"
    else ENGINE="qawno"; fi
fi

# Fallbacks
[ "$PROFILE" = "auto" ] && PROFILE="omp"
[ "$ENGINE" = "auto" ] && ENGINE="qawno"

# --- RUN ---
if [ "$WATCH" = true ]; then
    echo -e "${MAGENTA}[Watch]${NC} Monitoring ${CYAN}$TARGET_FILE${NC} [Profile: $PROFILE]"
    while inotifywait -e modify "$TARGET_FILE" 2>/dev/null; do
        clear; RETRY_COUNT=0; execute_compiler "$ENGINE" "$PROFILE" "$TARGET_FILE" "${PASSED_ARGS[@]}"
    done
else
    echo -e "${BLUE}[fpawn Workspace]${NC} Initiating ${CYAN}FerzDevZ${NC} Suite..."
    execute_compiler "$ENGINE" "$PROFILE" "$TARGET_FILE" "${PASSED_ARGS[@]}"
    STATUS=$?
    [ $STATUS -eq 0 ] && echo -e "${GREEN}[OK]${NC} Mission accomplished." || echo -e "${RED}[ERR]${NC} System failure."
    exit $STATUS
fi
