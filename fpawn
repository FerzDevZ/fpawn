#!/bin/bash

# fpawn Ultra - The Ultimate Pawn CLI for Linux
# Created for: FerzDevZ
# Version: 7.0 (Autopilot Pack)
# Engines: qawno (open.mp) & pawno (Legacy SAMP)

# --- DIRECTORIES ---
BASE_DIR="$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")"
QAWNO_DIR="$BASE_DIR/qawno"
PAWNO_DIR="$BASE_DIR/pawno"
GLOBAL_INC="$BASE_DIR/bin/includes"

# Colors
GREEN='\033[0;32m'
BLUE='\033[0;34m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
MAGENTA='\033[0;35m'
BOLD='\033[1m'
NC='\033[0m'

# --- FUNCTIONS ---

function show_help() {
    echo -e "${BLUE}${BOLD}fpawn Autopilot${NC} - v7.0"
    echo -e "Developed by ${CYAN}${BOLD}FerzDevZ${NC}"
    echo -e ""
    echo -e "Usage: ${YELLOW}fpawn${NC} <file.pwn> [options]"
    echo ""
    echo -e "${BOLD}Autopilot Feature:${NC}"
    echo -e "  - ${GREEN}Self-Healing${NC}: Automatically finds & installs missing includes!"
    echo ""
    echo -e "${BOLD}Commands:${NC}"
    echo -e "  --ensure        Manually scan and fix all includes"
    echo -e "  --watch         Live recompile on save"
    echo -e "  --plugin <name> Install common libraries"
    echo ""
}

function smart_finder() {
    local INC_NAME=$1
    echo -e "${BLUE}[Autopilot]${NC} Searching GitHub for ${CYAN}$INC_NAME${NC}..."
    
    local SEARCH_URL="https://api.github.com/search/code?q=filename:$INC_NAME+extension:inc"
    local RESPONSE=$(curl -s "$SEARCH_URL")
    
    local DOWNLOAD_URL=$(echo "$RESPONSE" | jq -r '.items[0].html_url' | sed 's/github.com/raw.githubusercontent.com/' | sed 's/\/blob\//\//')
    
    if [ "$DOWNLOAD_URL" != "null" ] && [ -n "$DOWNLOAD_URL" ]; then
        echo -e "${GREEN}[Found]${NC} Located at: ${DOWNLOAD_URL}"
        mkdir -p include
        curl -L -s -o "include/$INC_NAME" "$DOWNLOAD_URL"
        return 0
    else
        return 1
    fi
}

function color_filter() {
    sed -u \
    -e "s/error \([0-9]\{3\}\)/\x1b[1;31merror \1\x1b[0m/g" \
    -e "s/warning \([0-9]\{3\}\)/\x1b[1;33mwarning \1\x1b[0m/g" \
    -e "s/(\([0-9]\{1,\}\))/\x1b[1;36m(\1)\x1b[0m/g"
}

# --- CORE ENGINE ---

RETRY_LIMIT=5
RETRY_COUNT=0

function execute_compiler() {
    local ENGINE=$1
    local TARGET=$2
    shift 2
    local ARGS=("$@")
    
    local OUT_FILE="/tmp/fpawn_out.log"
    local STATUS=0

    # Project includes prioritization
    local INCLUDE_FLAGS=()
    [ -d "$(pwd)/include" ] && INCLUDE_FLAGS+=("-i$(pwd)/include")
    [ -d "$(pwd)/pawno/include" ] && INCLUDE_FLAGS+=("-i$(pwd)/pawno/include")
    INCLUDE_FLAGS+=("-i$GLOBAL_INC")

    if [ "$ENGINE" = "qawno" ]; then
        chmod +x "$QAWNO_DIR/pawncc"
        "$QAWNO_DIR/pawncc" "${ARGS[@]}" "${INCLUDE_FLAGS[@]}" "-i$QAWNO_DIR/include" "-;+" > "$OUT_FILE" 2>&1
        STATUS=$?
    else
        wine "$PAWNO_DIR/pawncc.exe" "${ARGS[@]}" "${INCLUDE_FLAGS[@]}" "-i$PAWNO_DIR/include" > "$OUT_FILE" 2>&1
        STATUS=$?
    fi

    # Check for "file not found" error
    if grep -q "fatal error 100: cannot read from file: \"" "$OUT_FILE"; then
        local MISSING=$(grep "fatal error 100: cannot read from file: \"" "$OUT_FILE" | head -n 1 | sed 's/.*: "\(.*\)".*/\1/')
        
        if [ $RETRY_COUNT -lt $RETRY_LIMIT ]; then
            echo -e "${YELLOW}[Self-Healing]${NC} Detected missing include: ${BOLD}$MISSING.inc${NC}"
            if smart_finder "$MISSING.inc"; then
                ((RETRY_COUNT++))
                echo -e "${GREEN}[Autopilot]${NC} Repair successful. Retrying compilation... (${RETRY_COUNT}/${RETRY_LIMIT})"
                execute_compiler "$ENGINE" "$TARGET" "${ARGS[@]}"
                return $?
            fi
        fi
    fi

    # If we are here, either it success or retry failed/limit reached
    cat "$OUT_FILE" | color_filter
    return $STATUS
}

# --- MAIN LOGIC ---

if [ $# -eq 0 ]; then
    show_help
    exit 1
fi

ENGINE="auto"
TARGET_FILE=""
PASSED_ARGS=()
WATCH=false

while [[ $# -gt 0 ]]; do
    case $1 in
        --help) show_help; exit 0 ;;
        --init) 
            mkdir -p gamemodes filterscripts include scriptfiles/logs
            echo -e "{\"dependencies\": {}}" > pawn.json
            echo -e "${GREEN}[Success]${NC} Project initialized (FerzDevZ Edition)."
            exit 0 ;;
        --update) 
            mkdir -p "$GLOBAL_INC"
            curl -L -s -o "$GLOBAL_INC/a_samp.inc" "https://raw.githubusercontent.com/pawn-lang/samp-stdlib/master/a_samp.inc"
            echo -e "${GREEN}[Update]${NC} Global library updated."
            exit 0 ;;
        --plugin)
            plugin_manager "$2" # (Plugin manager function still needed from previous version)
            shift 2; exit 0 ;;
        --watch) WATCH=true; shift ;;
        --omp) ENGINE="qawno"; shift ;;
        --legacy) ENGINE="pawno"; shift ;;
        --debug) PASSED_ARGS+=("-d3"); shift ;;
        --opt) PASSED_ARGS+=("-O2"); shift ;;
        *.pwn) TARGET_FILE="$1"; PASSED_ARGS+=("$1"); shift ;;
        *) PASSED_ARGS+=("$1"); shift ;;
    esac
done

# Detection logic
if [ "$ENGINE" = "auto" ] && [ -f "$TARGET_FILE" ]; then
    if grep -q "#include <open.mp>" "$TARGET_FILE"; then ENGINE="qawno"
    elif grep -q "#include <a_samp>" "$TARGET_FILE"; then ENGINE="pawno"
    else ENGINE="qawno"; fi
fi

# Ensure plugin_manager is defined (restored from v6)
function plugin_manager() {
    local NAME=$1
    echo -e "${BLUE}[FPM]${NC} Setting up ${CYAN}$NAME${NC}..."
    mkdir -p include
    case $NAME in
        streamer) curl -L -s -o "include/streamer.inc" "https://raw.githubusercontent.com/samp-incognito/samp-streamer-plugin/master/include/streamer.inc" ;;
        mysql)    curl -L -s -o "include/a_mysql.inc" "https://raw.githubusercontent.com/pBlueG/SA-MP-MySQL/master/a_mysql.inc" ;;
        sscanf)   curl -L -s -o "include/sscanf2.inc" "https://raw.githubusercontent.com/Y-Less/sscanf/master/sscanf2.inc" ;;
        ysi)      git clone --depth 1 https://github.com/pawn-lang/YSI-Includes.git include/YSI ;;
        *)        echo -e "${RED}[Error]${NC} Unknown plugin: $NAME"; exit 1 ;;
    esac
    echo -e "${GREEN}[Success]${NC} Plugin added."
}

# --- RUN ---
export LD_LIBRARY_PATH="$QAWNO_DIR:$LD_LIBRARY_PATH"

if [ "$WATCH" = true ]; then
    echo -e "${MAGENTA}[Watch]${NC} Monitoring ${CYAN}$TARGET_FILE${NC} (Autopilot Enabled)..."
    while inotifywait -e modify "$TARGET_FILE" 2>/dev/null; do
        clear; RETRY_COUNT=0; execute_compiler "$ENGINE" "$TARGET_FILE" "${PASSED_ARGS[@]}"
    done
else
    echo -e "${BLUE}[fpawn Autopilot]${NC} Initiating ${CYAN}FerzDevZ${NC} Flight..."
    execute_compiler "$ENGINE" "$TARGET_FILE" "${PASSED_ARGS[@]}"
    STATUS=$?
    [ $STATUS -eq 0 ] && echo -e "${GREEN}[OK]${NC} Safe landing!" || echo -e "${RED}[ERR]${NC} Crash detected."
    exit $STATUS
fi
